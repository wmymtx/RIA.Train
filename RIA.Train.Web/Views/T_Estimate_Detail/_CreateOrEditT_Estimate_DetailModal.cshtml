
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using RIA.Train.Web.Areas.Mpa.Models.Common.Modals
@using RIA.Train.Web.Areas.Mpa.Models.T_Estimate_DetailManage

@model CreateOrEditT_Estimate_DetailModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditT_Estimate_Detail") + ": " + Model.T_Estimate_Detail.FK_EstimateId) : L("CreateT_Estimate_Detail")))


<!--html代码区域-->
<div class="modal-body">
    <form name="t_Estimate_DetailInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.T_Estimate_Detail.Id" />
 <div class="row>
            
               
	     <div hidden="hidden">           
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="Id" value="@Model.T_Estimate_Detail.Id"/>
            }
        </div>
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Estimate_Detail.FK_EstimateId.IsNullOrEmpty() ? "" : " edited")" type="text" name="FK_EstimateId" value="@Model.T_Estimate_Detail.FK_EstimateId"	 />			
            <label>@L("FK_EstimateId") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Estimate_Detail.FK_UserId.IsNullOrEmpty() ? "" : " edited")" type="text" name="FK_UserId" value="@Model.T_Estimate_Detail.FK_UserId"	 />			
            <label>@L("FK_UserId") </label>
        </div>
   
	                  
               
	    <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <label>@L("CreateTime"):   </label>            
                <div class="input-group  date form_datetime">
                    <input type="text" name="CreateTime" value="@Model.T_Estimate_Detail.CreateTime" readonly class="form-control">
                    <span class="input-group-btn">
                        <button class="btn default date-set" type="button">
                            <i class="fa fa-calendar"></i>
                        </button>
                    </span>
                </div>
        
        </div>
	                  
            </div>
    </form>
</div>
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
