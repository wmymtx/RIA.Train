
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using RIA.Train.Web.Models.Common
@using RIA.Train.Web.Models

@model CreateOrEditT_ClassModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditT_Class") + ": " + Model.T_Class.Fk_Id) : L("CreateT_Class")))


<!--html代码区域-->
<div class="modal-body">
    <form name="t_ClassInformationsForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.T_Class.Id" />
        <div class="row>


            <div hidden="hidden">
                @if (Model.IsEditMode)
            {
                    <input type="hidden" name="Id" value="@Model.T_Class.Id" />
                }
            </div>


            <div class="form-group form-md-line-input form-md-floating-label  " hidden="hidden">
                <input  class="maxlength-handler form-control" type="hidden" name="Fk_Id" value="@Model.T_Class.Fk_Id" />
            </div>



            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                <label>@L("TrainingTime"):   </label>
                <div class="input-group  date form_datetime">
                    <input type="text" name="TrainingTime" value="@Model.T_Class.TrainingTime" readonly class="form-control">
                    <span class="input-group-btn">
                        <button class="btn default date-set" type="button">
                            <i class="fa fa-calendar"></i>
                        </button>
                    </span>
                </div>

            </div>


            <div class="form-group form-md-line-input form-md-floating-label  ">
                <input class="maxlength-handler form-control @(Model.T_Class.TrainingPlace.IsNullOrEmpty() ? "" : " edited")" type="text" name="TrainingPlace" value="@Model.T_Class.TrainingPlace" maxlength="50" />
                <label>@L("TrainingPlace") </label>
            </div>



            <div class="form-group form-md-line-input form-md-floating-label  ">
                <input class="maxlength-handler form-control @(Model.T_Class.TrainintTeacher.IsNullOrEmpty() ? "" : " edited")" type="text" name="TrainintTeacher" value="@Model.T_Class.TrainintTeacher" maxlength="30" />
                <label>@L("TrainintTeacher") </label>
            </div>





        </div>
    </form>
</div>
@Html.Partial("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")

