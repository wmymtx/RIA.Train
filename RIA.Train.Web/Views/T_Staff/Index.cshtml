

@using Abp.Web.Mvc.Extensions
@using RIA.Train.Entities.Authorization
@{
    ViewBag.CurrentPageName = T_StaffAppPermissions.T_Staff;
    ViewBag.Title = L("T_Staff");

}

@section Styles{
		
	  	  	     <link href="~/libs/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet"/>     	  	    
}


@* 注入所需JS *@
@section Scripts
{ <script src="~/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>

       <script src="~/libs/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/libs/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>

  
    @Html.IncludeScript("~/Areas/Mpa/Views/T_StaffManage/_CreateOrEditT_StaffModal.es5.min.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/T_StaffManage/Index.es5.min.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("T_Staff")</span> <small>@L("T_StaffHeaderInfo")</small>
                </h1>
            </div>
        
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button  id="ButtonReload" class="btn btn-primary blue"><i class="fa  fa-refresh"></i> @L("Refresh")</button>


        @if (IsGranted(T_StaffAppPermissions.T_Staff_CreateT_Staff))
        {
            <button id="CreateNewT_StaffButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateT_Staff")</button>
        }
    </div>
</div>

<div class="portlet light">
 @* 通用搜索功能 *@
<div class="portlet-title portlet-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="T_StaffsTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.FilterText">
                        <span class="input-group-btn">
                            <button id="GetT_StaffsButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="portlet-body">
        <div id="T_StaffsTable"></div>
    </div>
</div>









 