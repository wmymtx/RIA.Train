
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using RIA.Train.Web.Models.Common
@using RIA.Train.Web.Models

@model CreateOrEditT_StaffModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditT_Staff") + ": " + Model.T_Staff.FK_Staff_GroupId) : L("CreateT_Staff")))


<!--html代码区域-->
<div class="modal-body">
    <form name="t_StaffInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.T_Staff.Id" />
 <div class="row>
            
               
	     <div hidden="hidden">           
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="Id" value="@Model.T_Staff.Id"/>
            }
        </div>
	                  
               
		     <div hidden="hidden">       
                <input type="hidden" name="FK_Staff_GroupId" value="@Model.T_Staff.FK_Staff_GroupId"/>
        </div>
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Staff.StaffName.IsNullOrEmpty() ? "" : " edited")" type="text" name="StaffName" value="@Model.T_Staff.StaffName"		maxlength="30"  />			
            <label>@L("StaffName") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control " type="text" name="LoginNo" value="@Model.T_Staff.LoginNo"	 />			
            <label>@L("LoginNo") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Staff.PassWord.IsNullOrEmpty() ? "" : " edited")" type="text" name="PassWord" value="@Model.T_Staff.PassWord"		maxlength="50"  />			
            <label>@L("PassWord") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Staff.OpenId.IsNullOrEmpty() ? "" : " edited")" type="text" name="OpenId" value="@Model.T_Staff.OpenId"		maxlength="100"  />			
            <label>@L("OpenId") </label>
        </div>
   
	                  
            </div>
    </form>
</div>
@Html.Partial("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
