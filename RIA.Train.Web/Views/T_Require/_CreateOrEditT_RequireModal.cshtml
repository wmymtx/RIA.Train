
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using RIA.Train.Web.Models.Common
@using RIA.Train.Web.Models

@model CreateOrEditT_RequireModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditT_Require") + ": " + Model.T_Require.Fk_Id) : L("CreateT_Require")))


<!--html代码区域-->
<div class="modal-body">
    <form name="t_RequireInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.T_Require.Id" />
 <div class="row>
            
               
	     <div hidden="hidden">           
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="Id" value="@Model.T_Require.Id"/>
            }
        </div>
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Require.Fk_Id.IsNullOrEmpty() ? "" : " edited")" type="text" name="Fk_Id" value="@Model.T_Require.Fk_Id"	 />			
            <label>@L("Fk_Id") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Require.Fk_UserId.IsNullOrEmpty() ? "" : " edited")" type="text" name="Fk_UserId" value="@Model.T_Require.Fk_UserId"	 />			
            <label>@L("Fk_UserId") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Require.UserName.IsNullOrEmpty() ? "" : " edited")" type="text" name="UserName" value="@Model.T_Require.UserName"		maxlength="30"  />			
            <label>@L("UserName") </label>
        </div>
   
	                  
               
	       <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <textarea name="Content" auto-focus class="form-control @(Model.T_Require.Content.IsNullOrEmpty() ? "" : "edited")" 	  rows="4">@Model.T_Require.Content</textarea>
            <label> @L("Content") </label>
        </div>

	                  
               
	    <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <label>@L("SubmitTime"):   </label>            
                <div class="input-group  date form_datetime">
                    <input type="text" name="SubmitTime" value="@Model.T_Require.SubmitTime" readonly class="form-control">
                    <span class="input-group-btn">
                        <button class="btn default date-set" type="button">
                            <i class="fa fa-calendar"></i>
                        </button>
                    </span>
                </div>
        
        </div>
	                  
            </div>
    </form>
</div>
@Html.Partial("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
