

@using Abp.Web.Mvc.Extensions
@using RIA.Train.Entities.Authorization
@{
    ViewBag.CurrentPageName = T_RequireAppPermissions.T_Require;
    ViewBag.Title = L("T_Require");

}

@section Styles{
		
	  	  	     <link href="~/libs/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet"/>     	  	    
}


@* 注入所需JS *@
@section Scripts
{ <script src="~/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>

       <script src="~/libs/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/libs/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>

  
    @Html.IncludeScript("~/Areas/Mpa/Views/T_RequireManage/_CreateOrEditT_RequireModal.es5.min.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/T_RequireManage/Index.es5.min.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("T_Require")</span> <small>@L("T_RequireHeaderInfo")</small>
                </h1>
            </div>
        
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button  id="ButtonReload" class="btn btn-primary blue"><i class="fa  fa-refresh"></i> @L("Refresh")</button>


        @if (IsGranted(T_RequireAppPermissions.T_Require_CreateT_Require))
        {
            <button id="CreateNewT_RequireButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateT_Require")</button>
        }
    </div>
</div>

<div class="portlet light">
 @* 通用搜索功能 *@
<div class="portlet-title portlet-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="T_RequiresTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.FilterText">
                        <span class="input-group-btn">
                            <button id="GetT_RequiresButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="portlet-body">
        <div id="T_RequiresTable"></div>
    </div>
</div>









 