
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using RIA.Train.Web.Areas.Mpa.Models.Common.Modals
@using RIA.Train.Web.Areas.Mpa.Models.T_ContentManage

@model CreateOrEditT_ContentModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditT_Content") + ": " + Model.T_Content.Content) : L("CreateT_Content")))


<!--html代码区域-->
<div class="modal-body">
    <form name="t_ContentInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.T_Content.Id" />
 <div class="row>
            
               
	     <div hidden="hidden">           
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="Id" value="@Model.T_Content.Id"/>
            }
        </div>
	                  
               
	       <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <textarea name="Content" auto-focus class="form-control @(Model.T_Content.Content.IsNullOrEmpty() ? "" : "edited")" 	  rows="4">@Model.T_Content.Content</textarea>
            <label> @L("Content") </label>
        </div>

	                  
            </div>
    </form>
</div>
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
