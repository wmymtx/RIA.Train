

@using Abp.Web.Mvc.Extensions
@using RIA.Train.Core.Authorization
@{
    ViewBag.CurrentPageName = T_ContentAppPermissions.T_Content;
    ViewBag.Title = L("T_Content");

}

@section Styles{
		
	  	  	  	    
}


@* 注入所需JS *@
@section Scripts
{ <script src="~/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>

 
    @Html.IncludeScript("~/Views/T_Content/_CreateOrEditT_ContentModal.js")
    @Html.IncludeScript("~/Views/T_Content/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("T_Content")</span> <small>@L("T_ContentHeaderInfo")</small>
                </h1>
            </div>
        
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button  id="ButtonReload" class="btn btn-primary blue"><i class="fa  fa-refresh"></i> @L("Refresh")</button>


        @*@if (IsGranted(T_ContentAppPermissions.T_Content_CreateT_Content))
        {*@
            <button id="CreateNewT_ContentButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateT_Content")</button>
        @*}*@
    </div>
</div>

<div class="portlet light">
 @* 通用搜索功能 *@
<div class="portlet-title portlet-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="T_ContentsTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.FilterText">
                        <span class="input-group-btn">
                            <button id="GetT_ContentsButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="portlet-body">
        <div id="T_ContentsTable"></div>
    </div>
</div>









 