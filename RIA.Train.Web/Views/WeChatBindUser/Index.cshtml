@{
    Layout = null;
}
<html>
<head>
    <title>培训</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta name="description" content="人类回收资源,资源服务人类">
    <link rel="stylesheet" href="~/lib/weui.min.css">
    <link rel="stylesheet" href="~/css/jquery-weui.css">
    <link rel="stylesheet" href="~/css/common.css">
    @*@Styles.Render("~/Bundles/cus_css")*@
    <title>编辑个人信息</title>
</head>
<body ontouchstart>

    <div class="weui_cells_title">登录</div>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">工资号</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input id="loginNo" class="weui_input" type="text" placeholder="工资号">
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">密码</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input id="password" class="weui_input" type="password" placeholder="密码">
            </div>
        </div>
    </div>


    <div id="submit" style="padding-top:30px">
        <a href="javascript:;" class="weui_btn weui_btn_primary">确 定</a>
    </div>
    <div id="modify" style="padding-top:30px">
        <a href="javascript:;" class="weui_btn weui_btn_primary">修改密码</a>
    </div>
    <script src="~/lib/jquery-2.1.4.js?t=1"></script>
    <script src="~/lib/fastclick.js?t=1"></script>
    <script src="~/js/jquery-weui.min.js"></script>
    <script src="~/js/shoushou.js?t=1"></script>
    <script src="~/Views/WeChatBindUser/Index.js?t=7"></script>

    <script>
        var openId = "@ViewBag.OpenId";
        var retUrl = "@ViewBag.retUrl";

        $("#modify").click(function () {
            window.location = '/WeChatBindUser/ModifyPwd?retUrl='+retUrl;
        });
        $(function () {
            ssUser.init();
        });
    </script>

</body>
</html>
