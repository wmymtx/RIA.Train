
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using RIA.Train.Web.Areas.Mpa.Models.Common.Modals
@using RIA.Train.Web.Areas.Mpa.Models.T_EstimateManage

@model CreateOrEditT_EstimateModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditT_Estimate") + ": " + Model.T_Estimate.FK_ClassId) : L("CreateT_Estimate")))


<!--html代码区域-->
<div class="modal-body">
    <form name="t_EstimateInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.T_Estimate.Id" />
 <div class="row>
            
               
	     <div hidden="hidden">           
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="Id" value="@Model.T_Estimate.Id"/>
            }
        </div>
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Estimate.FK_ClassId.IsNullOrEmpty() ? "" : " edited")" type="text" name="FK_ClassId" value="@Model.T_Estimate.FK_ClassId"	 />			
            <label>@L("FK_ClassId") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Estimate.FK_ContentId.IsNullOrEmpty() ? "" : " edited")" type="text" name="FK_ContentId" value="@Model.T_Estimate.FK_ContentId"	 />			
            <label>@L("FK_ContentId") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Estimate.FK_GradeId.IsNullOrEmpty() ? "" : " edited")" type="text" name="FK_GradeId" value="@Model.T_Estimate.FK_GradeId"	 />			
            <label>@L("FK_GradeId") </label>
        </div>
   
	                  
               
  	<div class="form-group form-md-line-input form-md-floating-label  ">
            <input class="maxlength-handler form-control @(Model.T_Estimate.ContentCount.IsNullOrEmpty() ? "" : " edited")" type="text" name="ContentCount" value="@Model.T_Estimate.ContentCount"	 />			
            <label>@L("ContentCount") </label>
        </div>
   
	                  
            </div>
    </form>
</div>
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
