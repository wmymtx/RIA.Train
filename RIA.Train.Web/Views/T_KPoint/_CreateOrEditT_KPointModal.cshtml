
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using RIA.Train.Web.Models.Common
@using RIA.Train.Web.Models

@model CreateOrEditT_KPointModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditT_KPoint") + ": " + Model.T_KPoint.Fk_Item_KPoint_Id) : L("CreateT_KPoint")))


<!--html代码区域-->
<div class="modal-body">
    <form name="t_KPointInformationsForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.T_KPoint.Id" />
        <div class="row>


            <div hidden="hidden">
                @if (Model.IsEditMode)
            {
                    <input type="hidden" name="Id" value="@Model.T_KPoint.Id" />
                }
            </div>


            <div hidden="hidden">
                <input type="hidden" name="Fk_Item_KPoint_Id" value="@Model.T_KPoint.Fk_Item_KPoint_Id" />

            </div>



            <div class="form-group form-md-line-input form-md-floating-label  ">
                <input class="maxlength-handler form-control )" type="text" name="TrainContent" value="@Model.T_KPoint.TrainContent" maxlength="50" />
                <label>@L("内容") </label>
            </div>


        </div>
    </form>
</div>
@Html.Partial("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")

