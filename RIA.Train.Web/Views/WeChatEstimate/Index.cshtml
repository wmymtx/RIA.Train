<body ontouchstart>
    <div class="weui_cells_title">课程信息</div>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">培训老师</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                @ViewBag.ClassInfo.TrainintTeacher
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">培训地点</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                @ViewBag.ClassInfo.TrainingPlace
            </div>
        </div>
