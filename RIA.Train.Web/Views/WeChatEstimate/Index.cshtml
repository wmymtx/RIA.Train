    </div>
    <input type="hidden" id="itemId" value="@ViewBag.ClassInfo.Id" />
       @* <div class="weui_cells_title">@ViewBag.itemInfo.ProjectName</div>*@
    @foreach (var itemContent in ViewBag.Contents)
    {
        <div class="weui_cells_title">@itemContent.Content</div>
            <div class="weui_cells weui_cells_checkbox">
                <div class="weui_cells weui_cells_checkbox">
                    @foreach (var item in ViewBag.Grades)
                    {
                        <label class="weui_cell weui_check_label" for="s1 @item.Id @itemContent.Id">
                            <div class="weui_cell_hd">
                                <input type="radio" class="weui_check" valueName="@itemContent.Content" name="@itemContent.Content" id="s1 @item.Id @itemContent.Id" value="@item.Id+@itemContent.Id">
                                <i class="weui_icon_checked"></i>
                            </div>
                            <div class="weui_cell_bd weui_cell_primary">
                                <p>@item.Grade</p>
                            </div>
                        </label>
                    }
                </div>



            </div>
    }
   
